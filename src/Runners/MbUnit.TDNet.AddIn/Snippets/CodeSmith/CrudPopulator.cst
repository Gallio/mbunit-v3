			{
				Console.WriteLine("New row:");
				DisplayRow(row);
				Console.WriteLine("Row to update:");
				DisplayRow(rowToUpdate);
				Assert.Fail("Row update failed");
			}
			
			return rowToUpdate;
		}				

		/// <summary>
		/// Deletes a random row
		/// from the <em><%= table.Name %></em> table.
		/// </summary>
