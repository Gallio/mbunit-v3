<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           xmlns:msdata="urn:schemas-microsoft-com:xml-msdata"
           targetNamespace="SolarSystem"
           elementFormDefault="qualified">
  <xs:element name="SolarSystem" msdata:IsDataSet="true">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Planets">
          <xs:complexType>
            <xs:sequence>
              <xs:element maxOccurs="unbounded" name="Planet">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="Satellites">
                      <xs:complexType>
                        <xs:sequence minOccurs="0">
                          <xs:element maxOccurs="unbounded" name="Satellite">
                            <xs:complexType>
                              <xs:attribute name="name" type="xs:string" use="required" />
                            </xs:complexType>
                          </xs:element>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                  <xs:attribute name="name" type="xs:string" use="required" />
                  <xs:attribute name="distanceToSun" use="required">
                    <xs:simpleType>
                      <xs:restriction base="xs:string">
                        <xs:pattern value="^(\d+\.)?\d+\sAU$" />
                      </xs:restriction>
                    </xs:simpleType>
                  </xs:attribute>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>

